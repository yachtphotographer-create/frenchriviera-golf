<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-PBCJ6V7M');</script>
    <!-- End Google Tag Manager -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' | ' : '' %><%= appName %></title>
    <meta name="description" content="<%= typeof metaDescription !== 'undefined' ? metaDescription : 'Find golf partners on the French Riviera. Connect with players, join games, and discover the best courses on the CÃ´te d\'Azur.' %>">
    <link rel="canonical" href="<%= appUrl %><%= typeof canonicalPath !== 'undefined' ? canonicalPath : '' %>">

    <!-- Open Graph -->
    <meta property="og:title" content="<%= typeof title !== 'undefined' ? title : appName %>">
    <meta property="og:description" content="<%= typeof metaDescription !== 'undefined' ? metaDescription : 'Find golf partners on the French Riviera' %>">
    <meta property="og:type" content="<%= typeof ogType !== 'undefined' ? ogType : 'website' %>">
    <meta property="og:url" content="<%= appUrl %><%= typeof canonicalPath !== 'undefined' ? canonicalPath : '' %>">
    <meta property="og:site_name" content="<%= appName %>">
    <meta property="og:locale" content="en_GB">
    <% if (typeof ogImage !== 'undefined' && ogImage) { %>
    <meta property="og:image" content="<%= ogImage %>">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <% } else { %>
    <meta property="og:image" content="<%= appUrl %>/images/og-default.jpg">
    <% } %>

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= typeof title !== 'undefined' ? title : appName %>">
    <meta name="twitter:description" content="<%= typeof metaDescription !== 'undefined' ? metaDescription : 'Find golf partners on the French Riviera' %>">

    <% if (typeof schema !== 'undefined' && schema) { %>
    <!-- Schema.org Structured Data -->
    <script type="application/ld+json"><%- JSON.stringify(schema) %></script>
    <% } %>

    <!-- Fonts - Premium typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Styles -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-PBCJ6V7M"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <%- include('../partials/nav') %>

    <% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success">
        <span><%= success %></span>
        <button class="alert-close" onclick="this.parentElement.remove()">&times;</button>
    </div>
    <% } %>

    <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-error">
        <span><%= error %></span>
        <button class="alert-close" onclick="this.parentElement.remove()">&times;</button>
    </div>
    <% } %>

    <main>
        <%- body %>
    </main>

    <%- include('../partials/footer') %>

    <script src="/js/app.js"></script>
</body>
</html>
