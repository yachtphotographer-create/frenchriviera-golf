<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-PBCJ6V7M');</script>
    <!-- End Google Tag Manager -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' | ' : '' %><%= appName %></title>
    <meta name="description" content="<%= typeof metaDescription !== 'undefined' ? metaDescription : 'Find golf partners on the French Riviera. Connect with players, join games, and discover the best courses on the Côte d\'Azur.' %>">
    <link rel="canonical" href="<%= appUrl %><%= typeof canonicalPath !== 'undefined' ? canonicalPath : '' %>">

    <!-- Additional SEO Meta Tags -->
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
    <meta name="author" content="French Riviera Golf">
    <meta name="keywords" content="<%= typeof keywords !== 'undefined' ? keywords : 'golf french riviera, golf cote d azur, golf partners france, golf monaco, golf cannes, golf nice, tee time french riviera, play golf france' %>">

    <!-- Geo Tags for Local SEO -->
    <meta name="geo.region" content="FR-06">
    <meta name="geo.placename" content="French Riviera">
    <meta name="geo.position" content="43.7102;7.2620">
    <meta name="ICBM" content="43.7102, 7.2620">

    <!-- Language Alternates -->
    <link rel="alternate" hreflang="en" href="<%= appUrl %><%= typeof canonicalPath !== 'undefined' ? canonicalPath : '' %>">
    <link rel="alternate" hreflang="fr" href="<%= appUrl %><%= typeof canonicalPath !== 'undefined' ? canonicalPath : '' %>">
    <link rel="alternate" hreflang="x-default" href="<%= appUrl %><%= typeof canonicalPath !== 'undefined' ? canonicalPath : '' %>">

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#34c759">
    <meta name="msapplication-TileColor" content="#34c759">

    <!-- Open Graph -->
    <meta property="og:title" content="<%= typeof title !== 'undefined' ? title : appName %>">
    <meta property="og:description" content="<%= typeof metaDescription !== 'undefined' ? metaDescription : 'Find golf partners on the French Riviera' %>">
    <meta property="og:type" content="<%= typeof ogType !== 'undefined' ? ogType : 'website' %>">
    <meta property="og:url" content="<%= appUrl %><%= typeof canonicalPath !== 'undefined' ? canonicalPath : '' %>">
    <meta property="og:site_name" content="<%= appName %>">
    <meta property="og:locale" content="en_GB">
    <meta property="og:locale:alternate" content="fr_FR">
    <% if (typeof ogImage !== 'undefined' && ogImage) { %>
    <meta property="og:image" content="<%= ogImage %>">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <% } else { %>
    <meta property="og:image" content="<%= appUrl %>/images/og-default.png">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:image:alt" content="French Riviera Golf - Find playing partners on the Côte d'Azur">
    <% } %>

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="<%= typeof title !== 'undefined' ? title : appName %>">
    <meta name="twitter:description" content="<%= typeof metaDescription !== 'undefined' ? metaDescription : 'Find golf partners on the French Riviera' %>">
    <meta name="twitter:image" content="<%= typeof ogImage !== 'undefined' && ogImage ? ogImage : appUrl + '/images/og-default.jpg' %>">

    <!-- Organization Schema (appears on all pages) -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "French Riviera Golf",
        "url": "<%= appUrl %>",
        "logo": "<%= appUrl %>/images/logo.png",
        "description": "Connect with golf partners on the French Riviera. Find players, join games, and discover 20+ courses on the Côte d'Azur.",
        "areaServed": {
            "@type": "Place",
            "name": "French Riviera",
            "geo": {
                "@type": "GeoCircle",
                "geoMidpoint": {
                    "@type": "GeoCoordinates",
                    "latitude": 43.7102,
                    "longitude": 7.2620
                },
                "geoRadius": "100000"
            }
        },
        "sameAs": []
    }
    </script>

    <% if (typeof schema !== 'undefined' && schema) { %>
    <!-- Page-specific Schema.org Structured Data -->
    <% if (Array.isArray(schema)) { %>
        <% schema.forEach(function(s) { %>
    <script type="application/ld+json"><%- JSON.stringify(s) %></script>
        <% }); %>
    <% } else { %>
    <script type="application/ld+json"><%- JSON.stringify(schema) %></script>
    <% } %>
    <% } %>

    <% if (typeof breadcrumbs !== 'undefined' && breadcrumbs) { %>
    <!-- Breadcrumb Schema -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": <%- JSON.stringify(breadcrumbs) %>
    }
    </script>
    <% } %>

    <!-- Preload critical resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" href="/css/style.css" as="style">
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" as="style">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Styles -->
    <link rel="stylesheet" href="/css/style.css">

    <!-- DNS prefetch for external resources -->
    <link rel="dns-prefetch" href="https://www.googletagmanager.com">
    <link rel="dns-prefetch" href="https://www.google-analytics.com">
</head>
<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-PBCJ6V7M"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <%- include('../partials/nav') %>

    <% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success">
        <span><%= success %></span>
        <button class="alert-close" onclick="this.parentElement.remove()">&times;</button>
    </div>
    <% } %>

    <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-error">
        <span><%= error %></span>
        <button class="alert-close" onclick="this.parentElement.remove()">&times;</button>
    </div>
    <% } %>

    <main>
        <%- body %>
    </main>

    <%- include('../partials/footer') %>

    <script src="/js/app.js"></script>
</body>
</html>
