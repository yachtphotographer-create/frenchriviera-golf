<% const isFr = typeof lang !== 'undefined' && lang === 'fr'; %>
<% const subtitleFr = "Conseils, guides et actualités du golf sur la Côte d'Azur"; %>
<% const subtitleEn = "Tips, guides, and news from the French Riviera golf scene"; %>
<% const emptyFr = "Pas encore d'articles. Revenez bientôt pour des conseils et guides de golf !"; %>
<% const emptyEn = "No blog posts yet. Check back soon for golf tips and guides!"; %>
<%- include('../layouts/main', { body: `
<div class="blog-page">
    <div class="container">
        <nav class="breadcrumb-nav" aria-label="Breadcrumb">
            <ol class="breadcrumb-list">
                <li class="breadcrumb-item"><a href="/">${isFr ? 'Accueil' : 'Home'}</a></li>
                <li class="breadcrumb-item active"><span>Blog</span></li>
            </ol>
        </nav>
        <div class="page-header">
            <h1>${isFr ? 'Blog Golf' : 'Golf Blog'}</h1>
            <p class="page-subtitle">${isFr ? subtitleFr : subtitleEn}</p>
        </div>

        <div class="blog-grid">
            ${posts && posts.length > 0 ?
                posts.map(post => `
                    <article class="blog-card">
                        <a href="/blog/${post.slug}">
                            <div class="blog-card-image">
                                ${post.featured_image ?
                                    `<img src="${post.featured_image}" alt="${post.title}" loading="lazy">` :
                                    `<div class="blog-card-placeholder"><span>${isFr ? 'Blog Golf' : 'Golf Blog'}</span></div>`
                                }
                                ${post.category ? `<span class="blog-category">${post.category}</span>` : ''}
                            </div>
                            <div class="blog-card-content">
                                <h2 class="blog-card-title">${post.title}</h2>
                                <p class="blog-card-excerpt">${post.excerpt || ''}</p>
                                <div class="blog-card-meta">
                                    <span class="blog-date">${new Date(post.published_at).toLocaleDateString(isFr ? 'fr-FR' : 'en-GB', { day: 'numeric', month: 'short', year: 'numeric' })}</span>
                                    <span class="blog-read-more">${isFr ? 'Lire la suite' : 'Read more'} &rarr;</span>
                                </div>
                            </div>
                        </a>
                    </article>
                `).join('') :
                `<div class="empty-state">
                    <p>${isFr ? emptyFr : emptyEn}</p>
                </div>`
            }
        </div>
    </div>
</div>

<style>
.blog-page { padding: 2rem 0 4rem; }
.blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
}
.blog-card {
    background: #ecfdf5;
    border-radius: var(--radius-lg);
    overflow: hidden;
    border: 2px solid #7DD3FC;
    transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
}
.blog-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-glass-hover);
    background: #e0f2fe;
}
.blog-card a { text-decoration: none; color: inherit; }
.blog-card-image {
    height: 100px;
    overflow: hidden;
    position: relative;
}
.blog-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.blog-card-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--color-primary-muted) 0%, var(--color-primary) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    font-size: 0.85rem;
}
.blog-category {
    position: absolute;
    top: 0.5rem;
    left: 0.5rem;
    background: var(--color-primary);
    color: white;
    padding: 0.2rem 0.5rem;
    border-radius: var(--radius-full);
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
}
.blog-card-content { padding: 1rem; }
.blog-card-title {
    font-size: 1.1rem;
    margin-bottom: 0.4rem;
    color: var(--color-text);
}
.blog-card-excerpt {
    color: var(--color-text-secondary);
    font-size: 0.85rem;
    line-height: 1.5;
    margin-bottom: 0.75rem;
}
.blog-card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.8rem;
}
.blog-date { color: var(--color-text-muted); }
.blog-read-more { color: var(--color-primary); font-weight: 500; }
</style>
` }) %>
