<%- include('../layouts/main', { body: `
<div class="rating-page">
    <div class="container container-narrow">
        <h1>Rate Your Playing Partners</h1>
        <p class="text-muted">Game at ${game.course_name} on ${new Date(game.game_date).toLocaleDateString('en-GB', { weekday: 'long', day: 'numeric', month: 'long' })}</p>

        ${playersToRate.filter(p => !p.already_rated).length === 0 ?
            `<div class="card">
                <p>You have already rated all players from this game.</p>
                <a href="/games/${game.id}" class="btn btn-outline">Back to Game</a>
            </div>` :
            `<form action="/ratings/submit" method="POST" class="ratings-form">
                <input type="hidden" name="_csrf" value="${csrfToken}">
                <input type="hidden" name="game_id" value="${game.id}">

                ${playersToRate.filter(p => !p.already_rated).map((player, index) => `
                    <div class="rating-card card">
                        <div class="rating-player">
                            ${player.profile_photo ?
                                `<img src="${player.profile_photo}" alt="" class="rating-avatar">` :
                                `<span class="rating-avatar-placeholder">${player.display_name.charAt(0)}</span>`
                            }
                            <h3>${player.display_name}</h3>
                        </div>

                        <input type="hidden" name="ratings[${index}][user_id]" value="${player.user_id}">

                        <div class="rating-criteria">
                            <div class="rating-item">
                                <label>Punctuality</label>
                                <div class="star-rating">
                                    <input type="hidden" name="ratings[${index}][punctuality]" value="" required>
                                    <span class="star">&#9733;</span>
                                    <span class="star">&#9733;</span>
                                    <span class="star">&#9733;</span>
                                    <span class="star">&#9733;</span>
                                    <span class="star">&#9733;</span>
                                </div>
                            </div>

                            <div class="rating-item">
                                <label>Pace of Play</label>
                                <div class="star-rating">
                                    <input type="hidden" name="ratings[${index}][pace_of_play]" value="" required>
                                    <span class="star">&#9733;</span>
                                    <span class="star">&#9733;</span>
                                    <span class="star">&#9733;</span>
                                    <span class="star">&#9733;</span>
                                    <span class="star">&#9733;</span>
                                </div>
                            </div>

                            <div class="rating-item">
                                <label>Friendliness</label>
                                <div class="star-rating">
                                    <input type="hidden" name="ratings[${index}][friendliness]" value="" required>
                                    <span class="star">&#9733;</span>
                                    <span class="star">&#9733;</span>
                                    <span class="star">&#9733;</span>
                                    <span class="star">&#9733;</span>
                                    <span class="star">&#9733;</span>
                                </div>
                            </div>

                            <div class="rating-item">
                                <label>Would Play Again</label>
                                <div class="star-rating">
                                    <input type="hidden" name="ratings[${index}][would_play_again]" value="" required>
                                    <span class="star">&#9733;</span>
                                    <span class="star">&#9733;</span>
                                    <span class="star">&#9733;</span>
                                    <span class="star">&#9733;</span>
                                    <span class="star">&#9733;</span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="comment_${index}">Comment (optional)</label>
                            <textarea name="ratings[${index}][comment]" id="comment_${index}" rows="2"
                                      placeholder="Any feedback for this player..."></textarea>
                        </div>
                    </div>
                `).join('')}

                <div class="form-actions">
                    <a href="/games/${game.id}" class="btn btn-outline">Cancel</a>
                    <button type="submit" class="btn btn-primary">Submit Ratings</button>
                </div>
            </form>`
        }
    </div>
</div>

<style>
.rating-page { padding: var(--spacing-2xl) 0; }
.rating-page h1 { margin-bottom: var(--spacing-xs); }
.rating-page > .container > p { margin-bottom: var(--spacing-xl); }
.rating-card { margin-bottom: var(--spacing-xl); }
.rating-player { display: flex; align-items: center; gap: var(--spacing-md); margin-bottom: var(--spacing-lg); padding-bottom: var(--spacing-lg); border-bottom: 1px solid var(--color-border); }
.rating-avatar { width: 56px; height: 56px; border-radius: 50%; object-fit: cover; }
.rating-avatar-placeholder { width: 56px; height: 56px; border-radius: 50%; background: var(--color-primary); color: white; display: flex; align-items: center; justify-content: center; font-size: 1.25rem; font-weight: 600; }
.rating-player h3 { margin: 0; }
.rating-criteria { display: grid; grid-template-columns: repeat(2, 1fr); gap: var(--spacing-lg); margin-bottom: var(--spacing-lg); }
.rating-item > label:first-child { display: block; font-weight: 500; margin-bottom: var(--spacing-sm); }
.star-rating { display: flex; gap: 4px; }
.star-rating input { display: none; }
.star-rating .star { font-size: 1.75rem; color: #ddd; cursor: pointer; transition: color 0.15s; }
.star-rating .star:hover, .star-rating .star.active { color: #f4c430; }
.star-rating .star.hovered { color: #f4c430; }
@media (max-width: 768px) { .rating-criteria { grid-template-columns: 1fr; } }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.star-rating').forEach(function(container) {
        const stars = container.querySelectorAll('.star');
        const input = container.querySelector('input[type="hidden"]');

        stars.forEach(function(star, index) {
            star.addEventListener('click', function() {
                const value = index + 1;
                input.value = value;
                updateStars(container, value);
            });

            star.addEventListener('mouseenter', function() {
                const value = index + 1;
                highlightStars(container, value);
            });

            star.addEventListener('mouseleave', function() {
                const currentValue = parseInt(input.value) || 0;
                updateStars(container, currentValue);
            });
        });
    });

    function updateStars(container, value) {
        container.querySelectorAll('.star').forEach(function(star, index) {
            if (index < value) {
                star.classList.add('active');
            } else {
                star.classList.remove('active');
            }
            star.classList.remove('hovered');
        });
    }

    function highlightStars(container, value) {
        container.querySelectorAll('.star').forEach(function(star, index) {
            if (index < value) {
                star.classList.add('hovered');
            } else {
                star.classList.remove('hovered');
            }
        });
    }
});
</script>
` }) %>
